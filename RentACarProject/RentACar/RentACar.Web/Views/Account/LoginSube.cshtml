@{
    ViewData["Title"] = "Giriş Yap - Şube";
}


@using (Html.BeginForm("GirisYapSube", "Account"))
{
    <section class="vh-100 bg-black">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://i.pinimg.com/736x/2e/96/65/2e96651aa1d65a128847b36e06b27c01.jpg"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            @if (!string.IsNullOrEmpty(ViewBag.LoginError))
                                            {
                                                <div class="alert alert-danger col-12" role="alert">
                                                    @ViewBag.LoginError
                                                </div>

                                            }
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hoşgeldiniz! Hesabınıza Giriş Yapın</h5>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17">Mail Adresinizi Giriniz :</label>
                                            <input type="email" id="form2Example17" class="form-control form-control-lg" name="MailAdress" />
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example27">Şifrenizi Giriniz :</label>
                                            <input type="password" id="form2Example27" class="form-control form-control-lg" name="Parola" />
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Giriş Yap</button>
                                        </div>

                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Şubesiniz fakat hesabınız yok mu? <a asp-area="" asp-controller="Home" asp-action="Iletisim"
                                                                     style="color: #393f81;">Buradan İletişime Geçin</a>
                                        </p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
